{
  "name": "react-purely-stateful",
  "version": "1.2.2",
  "description": "A higher-order component to provide React component state to functional components",
  "author": "Michael Peyper",
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mpeyper/react-purely-stateful.git"
  },
  "scripts": {
    "start": "npm run test:watch",
    "build": "babel src --out-dir lib --copy-files",
    "lint": "eslint src/ --ext .js --ext .jsx",
    "lint:fix": "eslint src/ --ext .js --ext .jsx --fix",
    "test": "JEST_JUNIT_OUTPUT=./test-reports/test-output.xml jest --coverage",
    "test:watch": "npm test -- --watch",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "hoist-non-react-statics": "^2.3.1",
    "lodash": "^4.17.5",
    "recompose": "^0.26.0"
  },
  "peerDependencies": {
    "react": "^15.1 || ^16.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.2.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.17.0",
    "eslint-plugin-react": "^7.6.1",
    "jest": "^22.3.0",
    "jest-cli": "^22.3.0",
    "jest-junit": "^3.6.0",
    "raf": "^3.4.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.js",
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "testResultsProcessor": "./node_modules/jest-junit"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  }
}
