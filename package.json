{
  "name": "react-purely-stateful",
  "version": "1.0.3",
  "description": "A higher-order component to provide React component state to functional components",
  "author": "Michael Peyper",
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mpeyper/react-purely-stateful.git"
  },
  "scripts": {
    "start": "npm run test:watch",
    "dist": "babel src --out-dir lib --copy-files",
    "lint": "eslint src/ --ext .js --ext .jsx",
    "lint:fix": "eslint src/ --ext .js --ext .jsx --fix",
    "test": "JEST_JUNIT_OUTPUT=./test-reports/test-output.xml jest --coverage",
    "test:watch": "npm test -- --watch",
    "prepublish": "npm run dist"
  },
  "peerDependencies": {
    "react": ">= 15.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": " ^6.7.7",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.5.0",
    "enzyme": "^2.8.2",
    "eslint": "^3.16.1",
    "eslint-plugin-react": "^7.1.0",
    "jest": "^19.0.2",
    "jest-cli": "^19.0.2",
    "jest-junit": "^1.2.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "testResultsProcessor": "./node_modules/jest-junit"
  }
}
